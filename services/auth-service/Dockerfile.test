FROM golang:1.23-alpine

WORKDIR /app

# Install dependencies including gcc for CGO
RUN apk add --no-cache git gcc musl-dev

# Enable CGO for sqlite
ENV CGO_ENABLED=1

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Run tests with CGO explicitly enabled and proper build tags for Alpine
CMD ["sh", "-c", "CGO_ENABLED=1 go test -tags='sqlite_omit_load_extension' ./... -v -cover"]
