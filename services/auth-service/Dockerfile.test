FROM golang:1.23

WORKDIR /app

# Install dependencies
RUN apt-get update && apt-get install -y git gcc && rm -rf /var/lib/apt/lists/*

# Enable CGO for sqlite
ENV CGO_ENABLED=1

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Run tests
CMD ["go", "test", "./...", "-v", "-cover"]
